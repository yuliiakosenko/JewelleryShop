<script>
    function addToCard()
    {
      
       let product = document.getElementById("product").innerHTML;
       let quantity = document.getElementById("quantity").value;
       let size = document.getElementById("size").value;
      // let item = "Quantity: " + quantity + "         " + "Size: " + size;  // combine quantity and size as a single string

       let price = document.getElementById("price").innerHTML;
       //localStorage.test = quatity;

       let info = { Price: price, Quantity: quantity, Size: size }; //array of all total information
       
        localStorage.setItem(product, JSON.stringify(info) );


    }
</script>